{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sortieIndex.css')}}">
{% endblock %}

{% block title %}Sortie index{% endblock %}

{% block main %}
    
    <div class="title">
        <h1> barre de recherche </h1>
    </div>
    
    <div class="card-content">
    {% for sortie in sorties %}
            
        <a href="{{path('app_sortie_show', {'id': sortie.id} )}}" class="card-link">
            <div class="card">
                {# <img src="light.jpg" alt="light" class="icon"> #}
                <p class="title">{{sortie.nom}}</p>
                <p class="text">Check all your favourites in one place.</p>
                <p class="date">{{sortie.DateHeureDebut | date("d m Y")}}</p>
                <p class="desc">{{sortie.InfosSortie}}</p>
            </div>
        </a>

    {% endfor %}
    </div>
    
{% endblock %}
